{
  "manifest_version": 3,
  "name": "Mongolian Spellchecker",
  "version": "1.0",
  "description": "Spellchecks Mongolian text on all web pages.",
  "permissions": ["contextMenus", "storage", "activeTab"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["typo.js", "content.js"]
    }
  ],
  "host_permissions": ["<all_urls>"],
  "icons": {
    "128": "icons/icon.png"
  }
}
